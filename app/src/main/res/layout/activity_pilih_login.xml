<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PilihLoginActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar16"
        android:layout_width="409dp"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:title="     WELCOME!" />

    <Button
        android:id="@+id/btnLoginMhs"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:layout_marginTop="88dp"
        android:background="#FFEB3B"
        android:text="MAHASISWA"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar16" />

    <Button
        android:id="@+id/btnLoginAdmin"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="#00BCD4"
        android:text="ADMIN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginDosen" />

    <Button
        android:id="@+id/btnLoginDosen"
        android:layout_width="147dp"
        android:layout_height="58dp"
        android:layout_marginTop="32dp"
        android:background="#F44336"
        android:text="DOSEN"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnLoginMhs" />

</androidx.constraintlayout.widget.ConstraintLayout>